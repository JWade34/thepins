<div class="container">
  <div class="row">
    <%= link_to "Sign Out", sign_out_path, class: "btn btn-default pull-right" %>

    <%= link_to "Add New Pin", new_pin_path, class: "btn btn-default pull-right" %>
    <%= paginate @pins %>

  </div>
  <br>
  <div class="row">
    <% @pins.each do |pin| %>

      <div class="pin col-xs-3">
        <%= pin.user.username %>
        <%= link_to image_tag(pin.photo, size: "300"), class: "img-responsive" %>
      </div>

    <% end %>
  </div>
</div>
<%= paginate @pins %>
